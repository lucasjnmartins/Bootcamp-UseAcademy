<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/feedScreen">

    <fragment
        android:id="@+id/feedScreen"
        android:name="com.example.feed.Feed.FeedScreenView"
        android:label="fragment_feed_screen"
        tools:layout="@layout/fragment_feed_screen" >
        <action
            android:id="@+id/action_feedScreen_to_postScreen"
            app:destination="@id/postScreen" />
        <action
            android:id="@+id/action_feedScreen_to_profileScreen"
            app:destination="@id/profileScreen" />
    </fragment>
    <fragment
        android:id="@+id/postScreen"
        android:name="com.example.feed.Post.PostScreenView"
        android:label="fragment_post_screen"
        tools:layout="@layout/fragment_post_screen" />
    <fragment
        android:id="@+id/profileScreen"
        android:name="com.example.feed.Profile.ProfileScreenView"
        android:label="fragment_profile_screen"
        tools:layout="@layout/fragment_profile_screen" />
    <fragment
        android:id="@+id/loginScreen"
        android:name="com.example.feed.Login.LoginScreenView"
        android:label="fragment_login_screen"
        tools:layout="@layout/fragment_login_screen" >
        <action
            android:id="@+id/action_loginScreen_to_newUserScreen"
            app:destination="@id/newUserScreen" />
        <action
            android:id="@+id/action_loginScreen_to_feedScreen"
            app:destination="@id/feedScreen" />
    </fragment>
    <fragment
        android:id="@+id/newUserScreen"
        android:name="com.example.feed.CreateUser.NewUserScreenView"
        android:label="fragment_new_user_screen"
        tools:layout="@layout/fragment_new_user_screen" >
        <action
            android:id="@+id/action_newUserScreen_to_loginScreen"
            app:destination="@id/loginScreen" />
    </fragment>
</navigation>