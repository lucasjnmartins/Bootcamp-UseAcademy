<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".questionScreenFragment">

        <!-- TODO: Update blank fragment layout -->


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include
                android:id="@+id/toolbar_default"
                layout="@layout/toolbar" />


            <TextView
                android:id="@+id/tv_question"
                android:layout_width="match_parent"
                android:layout_height="77dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="22dp"
                android:layout_marginRight="24dp"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/toolbar_default"
                tools:text="PErguntaaaaaaaaaaaaaaaaaaaaaaaaaaaaa" />

            <TextView
                android:id="@+id/tv_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="15.9dp"
                android:layout_marginRight="24dp"
                android:text="@string/answers"
                android:textColor="@color/primaryColor"
                android:textSize="17sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_question" />

            <RadioGroup
                android:id="@+id/rg_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="24dp"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_answer">

                <RadioButton
                    android:id="@+id/rb_option1"
                    android:layout_width="match_parent"
                    android:layout_height="86dp"
                    android:gravity="top"
                    android:textSize="17sp"
                    tools:text="Opção 1" />

                <RadioButton
                    android:id="@+id/rb_option2"
                    android:layout_width="match_parent"
                    android:layout_height="86dp"
                    android:layout_marginTop="16dp"
                    android:gravity="top"
                    android:textSize="17sp"
                    tools:text="Opção 2" />

                <RadioButton
                    android:id="@+id/rb_option3"
                    android:layout_width="match_parent"
                    android:layout_height="86dp"
                    android:layout_marginTop="16dp"
                    android:gravity="top"
                    android:textSize="17sp"
                    tools:text="Opção 3" />

                <RadioButton
                    android:id="@+id/rb_option4"
                    android:layout_width="match_parent"
                    android:layout_height="86dp"
                    android:layout_marginTop="16dp"
                    android:gravity="top"
                    android:textSize="17sp"
                    tools:text="Opção 4" />
            </RadioGroup>

            <Button
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="19dp"
                android:background="@drawable/rounded_button"
                android:backgroundTint="@color/primaryColor"
                android:text="Responder"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>